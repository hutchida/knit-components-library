{
    "compilerOptions": {
        // "baseUrl": "./src/",
        "outDir": "lib",
        "module": "esnext",
        "target": "es5",
        "lib": [
            "es6",
            "dom",
            "es2016",
            "es2017"
        ],
        "jsx": "react",
        "declaration": true,
        "declarationDir": "dist",
        "moduleResolution": "node",
        "noUnusedLocals": true,
        "noUnusedParameters": true,
        "esModuleInterop": true,
        "noImplicitReturns": true,
        "noImplicitThis": true,
        "noImplicitAny": true,
        "strictNullChecks": true,
        "suppressImplicitAnyIndexErrors": true,
        "allowSyntheticDefaultImports": true,
        "sourceMap": true,
        "plugins": [
            {
                "name": "typescript-plugin-css-modules"
            }
        ]
    },
    "exclude": [
        "node_modules",
        "lib"
    ],
    "include": [
        "**/*.ts",
        "**/*.tsx",
        ".eslintrc.js",
        "tailwind.config.js"
    ]
}